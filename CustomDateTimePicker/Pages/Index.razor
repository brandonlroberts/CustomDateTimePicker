@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<div style="max-width:200px;">
    <DateTimePicker CurrentDateTime="CurrentDateTime" NewDateTimeCallback="DateTimeCallbackHandler" />
</div> 
<br/>
@CurrentDateTime.DateTime.ToLongDateString() @CurrentDateTime.DateTime.ToShortTimeString()

@code {
    private DateTimeOffset CurrentDateTime { get; set; } = DateTimeOffset.Now;
    
    private void DateTimeCallbackHandler(DateTimeOffset? result)
    {
        CurrentDateTime = result.Value;
    }
}


